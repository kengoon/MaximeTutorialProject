<TextField>:
    adaptive_height: True
    orientation: "vertical"
    padding: 0, "20dp"
    MDBoxLayout:
        adaptive_height: True
        spacing: "20dp"
        MDIcon:
            icon: root.icon_left
            font_size: root.icon_left_size
            pos_hint: {"center_y": .52}

        TextInput:
            text: root.text
            hint_text: root.hint_text
            size_hint_y: None
            height: self.minimum_height
            background_active: ""
            background_color: 0, 0, 0, 0
            background_normal: ""
            font_size: root.font_size
            font_name: root.font_name
            cursor_color: root.cursor_color
            multiline: root.multiline
            input_filter: root.input_filter
            input_type: root.input_type
            password: root.password
#            pos_hint: {"center_y": .5}
#            on_text_validate: root.text_validate_callback()
#            on_text: root.text = self.text
#            on_focus: root.focus = args[1]
        MDIconButton:
            icon: root.icon_right
            icon_size: root.icon_right_size
            on_release: root.dispatch("on_icon_right_release")
    MDSeparator:
        height: root.separator_height
        color: root.separator_color